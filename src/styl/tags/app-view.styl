app-view
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    .&-aDefaultTabGroup, .&-aHorizontalScrollPortion
        border-radius 0
        li
            position relative
    .&-aDefaultTabGroup
        li
            padding-left 1rem
            padding-right 1rem

body.maximized #mainnav
    @media (max-width 1000px)
        flex-wrap wrap

body.restored
    #mainnav
        right 0
    #app
        display none

#mainnav, #app, #fullscreen
    border-radius 0

@media (max-width 1000px)
    #mainnav span
        display none
    #mainnav svg:first-child
        margin-right 0
